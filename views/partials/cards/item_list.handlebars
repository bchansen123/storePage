{{#if active_category}}
<div class="tile is ancestor box">
    <div class="tile is-12 is-vertical is-parent">
        <div class="columns">
            <div class="column is-12">
                <div class="tile is-child">
                    <div class="columns">
                        <div class="column is-4">
                            <a href="/item/{{id}}">
                                <img src={{image_link}} width="300px">
                            </a>
                        </div>
                        <div class="column is-6">
                            <a href="/item/{{id}}">
                                <p class="title">{{product_name}}</p>
                            </a>
                            <hr>
                            <a href="/item/{{id}}">
                                <p class="subtitle">{{item_description}}</p>
                            </a>
                        </div>
                        <div class="column is-2">
                            <div class="level">
                                <p class="level-item subtitle is-right is-size-4">${{price}} ea.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/if}}